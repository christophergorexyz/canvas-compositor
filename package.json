{
    "name": "canvas-compositor",
    "version": "3.0.1",
    "description": "a light and performant canvas compositing engine",
    "main": "lib/CanvasCompositor.js",
    "scripts": {
        "prepare": "npm run build",
        "build": "esdoc && babel src/ -d lib/ -D -s && browserify src/Compositor.js -s CanvasCompositor -d -t [ babelify ] | uglifyjs > dist/canvas-compositor.min.js"
    },
    "keywords": [
        "2d",
        "canvas",
        "compositing"
    ],
    "author": "Christopher J Gore",
    "repository": {
        "type": "git",
        "url": "git@github.com:christophergorexyz/canvas-compositor.git"
    },
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.4.4",
        "@babel/core": "^7.4.5",
        "@babel/preset-env": "^7.4.5",
        "@babel/runtime": "^7.5.5",
        "babelify": "^10.0.0",
        "browserify": "^16.2.3",
        "esdoc": "^1.1.0",
        "esdoc-ecmascript-proposal-plugin": "^1.0.0",
        "esdoc-standard-plugin": "^1.0.0",
        "mocha": "^6.1.4",
        "uglify-js": "^3.6.0"
    },
    "dependencies": {
        "micro-mvc": "^1.2.0",
        "vectorious": "^5.5.0"
    },
    "babel": {
        "presets": [
            "@babel/env"
        ]
    },
    "esdoc": {
        "source": "./src",
        "destination": "./docs",
        "plugins": [
            {
                "name": "esdoc-ecmascript-proposal-plugin",
                "option": {
                    "all": true
                }
            },
            {
                "name": "esdoc-standard-plugin",
                "option": {
                    "all": true
                }
            }
        ]
    }
}
